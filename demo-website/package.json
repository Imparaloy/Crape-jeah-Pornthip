{
  "name": "demo-website",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "concurrently \"npm:watch:tailwind\" \"nodemon src/server.js\"",
    "watch:tailwind": "tailwindcss -i ./src/styles/tailwind.css -o ./public/asset/tailwind.css --watch",
    "build:tailwind": "tailwindcss -i ./src/styles/tailwind.css -o ./public/asset/tailwind.css --minify",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "mongoose": "^7.6.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.3"
  }
}
