<!-- views/components/menu-card.ejs -->
<div class="bg-white rounded-2xl shadow-lg overflow-hidden flex flex-col items-center w-[320px] h-[440px]">
  <div class="w-full h-[320px] overflow-hidden">
    <img src="<%= menu.image %>" alt="<%= menu.name %>" class="w-full h-[320px] object-cover object-top rounded-t-2xl">
  </div>
  <div class="p-5 w-full flex flex-col items-center">
    <h3 class="text-lg font-semibold text-center"><%= menu.name %></h3>
    <p class="text-gray-600 text-center"><%= menu.description %></p>
    <p class="text-red-700 font-bold mt-2 text-center">à¸¿<%= menu.price %></p>
    <button 
      onclick="addToCart('<%= menu._id %>')"
      class="mt-3 w-full bg-[#C24025] text-white py-2 rounded-xl font-semibold hover:bg-[#a8321a] transition-colors">
      Add to Cart
    </button>
  </div>
</div>