<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>Login | Crape Jeah Pornthip</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    if (window.localStorage.getItem('token')) {
      window.location.href = '/';
    }
  </script>
</head>
<body class="min-h-screen bg-[#fdf4ee] flex items-center justify-center py-10 px-4">
  <div class="w-full max-w-5xl bg-white/0 rounded-[32px] shadow-2xl overflow-hidden flex flex-col md:flex-row">
    <section class="bg-[#fdf3df] flex-1 flex flex-col items-center justify-center text-center px-10 py-12 space-y-6">
      <img src="/img/crepe.png" alt="Crepe" class="w-60 h-60 object-contain drop-shadow-lg" />
    </section>

    <main class="bg-[#C24025] flex-1 flex items-center justify-center px-10 py-12 text-[#FDECC8]">
      <div class="w-full max-w-sm">
        <h2 class="text-4xl font-semibold text-center mb-10">Login</h2>
        <label class="block text-sm font-medium mb-2">Account Name</label>
        <input id="name" class="w-full rounded-full border-none px-6 py-3 bg-white text-[#5d3327] shadow-inner focus:outline-none focus:ring-2 focus:ring-[#FDECC8]" placeholder="your username" required />

        <label class="block text-sm font-medium mt-6 mb-2">Password</label>
        <input id="password" type="password" class="w-full rounded-full border-none px-6 py-3 bg-white text-[#5d3327] shadow-inner focus:outline-none focus:ring-2 focus:ring-[#FDECC8]" placeholder="••••••••" required />

        <button id="loginBtn" class="mt-8 w-full bg-[#FFF4B2] text-[#C24025] py-3 rounded-[22px] font-semibold shadow hover:bg-[#ffe98d] transition-colors">Login</button>

        <p class="text-center text-sm mt-8">
          <a href="/register" class="underline text-[#FDECC8]">Create Account</a>
        </p>
      </div>
    </main>
  </div>

  <script>
    document.getElementById('loginBtn').addEventListener('click', async () => {
      const body = {
        name: document.getElementById('name').value.trim(),
        password: document.getElementById('password').value
      };
      if (!body.name || !body.password) { return alert('กรอกข้อมูลให้ครบ'); }

      try {
        const res = await fetch('/api/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(body)
        });
        const data = await res.json();
        if (!res.ok) throw new Error(data.message || 'Login failed');

        localStorage.setItem('token', data.token);
        if (data.user) {
          localStorage.setItem('user', JSON.stringify(data.user));
        }
        alert('เข้าสู่ระบบสำเร็จ');
        const role = (data.user && data.user.role) ? data.user.role : 'customer';
        if (role === 'seller' || role === 'admin') {
          location.href = '/orders';
        } else {
          location.href = '/';
        }
      } catch (err) {
        alert(err.message);
      }
    });
  </script>
</body>
</html>
