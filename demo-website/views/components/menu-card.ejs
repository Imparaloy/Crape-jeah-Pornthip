  <img src="<%= menu.image %>" alt="<%= menu.name %>" class="w-full h-48 object-cover">
  <div class="p-4">
    <h3 class="text-lg font-semibold"><%= menu.name %></h3>
    <p class="text-gray-600"><%= menu.description %></p>
    <p class="text-red-700 font-bold mt-2">à¸¿<%= menu.price %></p>
    <button 
      onclick="addToCart('<%= menu.id %>')"
      class="mt-2 w-full bg-red-700 text-white py-2 rounded-lg hover:bg-red-800">
      Add to Cart
    </button>
  </div>
</div>